<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_21sdp"
        android:layout_marginLeft="@dimen/_21sdp"
        tools:context=".presentation.address.view.CreateAddressFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:text="@string/create_address"
            android:textColor="@color/text_gray_434343"
            android:textSize="@dimen/_24ssp"
            android:layout_marginBottom="@dimen/_24sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street"
            android:textColor="@color/text_gray_434343"
            android:textSize="@dimen/_16ssp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/streetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="street: "
            android:textColorHint="@color/hint_gray_818181"
            android:textSize="@dimen/_12ssp"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/blue_667EEA"
            app:hintTextColor="@color/hint_gray_818181">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/street_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/text_gray_434343"
            android:textSize="@dimen/_12ssp"
            app:tint="@color/blue_667EEA"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/blue_667EEA"
            app:hintTextColor="@color/hint_gray_818181"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:textColor="@color/text_gray_434343"
            android:textSize="@dimen/_16ssp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="city: "
            android:textColorHint="@color/hint_gray_818181"
            android:textSize="@dimen/_12ssp"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/blue_667EEA"
            app:hintTextColor="@color/hint_gray_818181">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/city_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/text_gray_434343"
            android:textSize="@dimen/_12ssp"
            app:tint="@color/blue_667EEA" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lat"
            android:textColor="@color/text_gray_434343"
            android:textSize="@dimen/_16ssp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/latLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="lat: "
            android:textColorHint="@color/hint_gray_818181"
            android:textSize="@dimen/_12ssp"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/blue_667EEA"
            app:hintTextColor="@color/hint_gray_818181">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lat_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/text_gray_434343"
            android:textSize="@dimen/_12ssp"
            app:tint="@color/blue_667EEA"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/blue_667EEA"
            app:hintTextColor="@color/hint_gray_818181"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lang"
            android:textColor="@color/text_gray_434343"
            android:textSize="@dimen/_16ssp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/langLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="lang: "
            android:textColorHint="@color/hint_gray_818181"
            android:textSize="@dimen/_12ssp"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/blue_667EEA"
            app:hintTextColor="@color/hint_gray_818181">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lang_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/hint_gray_818181"
            android:textSize="@dimen/_12ssp"
            app:tint="@color/blue_667EEA"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/blue_667EEA"
            app:hintTextColor="@color/hint_gray_818181"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notes"
            android:textColor="@color/text_gray_434343"
            android:textSize="@dimen/_16ssp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/notesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="notes: "
            android:textColorHint="@color/hint_gray_818181"
            android:textSize="@dimen/_12ssp"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/blue_667EEA"
            app:hintTextColor="@color/hint_gray_818181">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/notes_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/text_gray_434343"
            android:textSize="@dimen/_12ssp"
            app:tint="@color/blue_667EEA"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/blue_667EEA"
            app:hintTextColor="@color/hint_gray_818181"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/add_address_btn"
            android:background="@drawable/gradient_blue_rounded_corners"
            app:backgroundTint="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_46sdp"
            android:elevation="4dp"
            android:paddingVertical="@dimen/_4sdp"
            android:text="Add Address"
            android:textAllCaps="false"
            android:textSize="@dimen/_14ssp"
            app:cornerRadius="4dp" />
    </LinearLayout>
</layout>