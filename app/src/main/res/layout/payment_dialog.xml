<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_374ABE"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:fontFamily="sans-serif-black"
            android:text="VISA"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />

        <EditText
            android:id="@+id/visa_no_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_21sdp"
            android:layout_marginLeft="@dimen/_21sdp"
            android:hint="enter your visa number please"
            android:textColorHint="@color/hint_gray_818181" />

        <EditText
            android:id="@+id/visa_date_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_21sdp"
            android:layout_marginLeft="@dimen/_21sdp"
            android:hint="enter you visa out date please"
            android:textColorHint="@color/hint_gray_818181" />

        <EditText
            android:id="@+id/visa_username_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_21sdp"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:hint="enter your name please"
            android:textColorHint="@color/hint_gray_818181" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_21sdp"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="center">

            <Button
                android:id="@+id/add_visa_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/_50sdp" />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/_50sdp" />
        </LinearLayout>

    </LinearLayout>
</layout>